#ifndef UTIL_H_
#define UTIL_H_

#include <iostream>
#include <random>
#include <helper_cuda.h>
#include <sys/time.h>
#include <climits>


const int range_from  = 0;
const int range_to    = INT_MAX;
std::random_device                  rand_dev;
std::mt19937                        generator(rand_dev());
std::uniform_int_distribution<int>  distr(range_from, range_to);

#define min(a, b) (a < b ? a : b)

long len;
//
// Get the time (in microseconds) since the last call to tm();
// the first value returned by this must not be trusted
//
timeval tStart;
int tm() {
    timeval tEnd;
    gettimeofday(&tEnd, 0);
    int t = (tEnd.tv_sec - tStart.tv_sec) * 1000000 + tEnd.tv_usec - tStart.tv_usec;
    tStart = tEnd;
    return t;
}


// read data into a minimal linked list
typedef struct {
    int v;
    void* next;
} LinkNode;

// helper function for reading numbers from stdin
// it's 'optimized' not to check validity of the characters it reads in..
long readList(long** list) {
    tm();
    std::cout << "Enter the length: ";
    std::cin >> len;
    long v, size = 0;
    LinkNode* node = 0;
    LinkNode* first = 0;
    while (len--) {
    	v = distr(generator);
        LinkNode* next = new LinkNode();
        next->v = v;
        if (node)
            node->next = next;
        else
            first = next;
        node = next;
        size++;
    }


    if (size) {
        *list = new long[size];
        LinkNode* node = first;
        long i = 0;
        while (node) {
            (*list)[i++] = node->v;
            node = (LinkNode*) node->next;
        }

    }



    return size;
}



#endif /* UTIL_H_ */
