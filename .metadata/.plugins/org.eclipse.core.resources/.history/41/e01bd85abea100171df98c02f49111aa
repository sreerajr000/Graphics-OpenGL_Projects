#ifndef PLAYER_H_
#define PLAYER_H_
#include <fstream>
struct playerData{
	int stage, score;
};
class Player{
public:
	int stage;
	int score;
	Player (){
		stage = STAGE_1;
		score = 0;
	}

	void saveGame() {
		fstream out("save.dat", ios::out | ios::binary);
		out << this;
		out.close();
	}

	void loadGame() {
		fstream in("save.dat", ios::in | ios::binary);
		in >> this;
		in.close();
	}
};



#endif /* PLAYER_H_ */
