#ifndef PLAYER_H_
#define PLAYER_H_
#include <fstream>
struct playerData{
	int stage, score;
};
class Player{
public:
	playerData data;
	Player (){
		data.stage = STAGE_1;
		data.score = 0;
	}

	void saveGame() {
		fstream out("save.dat", ios::out | ios::binary);
		out.write(reinterpret_cast<char*>&data, sizeof(playerData));
		out.close();
	}

	void loadGame() {
		fstream in("save.dat", ios::in | ios::binary);
		in.read(reinterpret_cast<char*>&data, sizeof(playerData));
		in.close();
	}
};



#endif /* PLAYER_H_ */
