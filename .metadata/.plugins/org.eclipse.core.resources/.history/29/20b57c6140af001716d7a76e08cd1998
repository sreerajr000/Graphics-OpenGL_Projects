#ifndef BLOCK_H_
#define BLOCK_H_

class SnakeBlock{
public:
	int x, y;
	SnakeBlock(int x_, int y_){
		x = x_;
		y = y_;
	}
	void Draw(const Shader &shader){
		model = glm::mat4();
		shader.setMat4("model", model);
	}
};


#endif /* BLOCK_H_ */
