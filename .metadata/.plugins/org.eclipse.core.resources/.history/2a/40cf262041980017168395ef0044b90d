#pragma once

#include "block.h"

std::vector<std::vector<int> > frame (18, std::vector<int>(10, 0));

void clearFrame() {
	frame.clear();
	frame.resize(18, std::vector<int>(10, 0));
}
void display(){
	for(auto x:frame){
		for(auto y:x)
			cout << y << " ";
		cout << "\n";
	}
	cout << "\n";
}

