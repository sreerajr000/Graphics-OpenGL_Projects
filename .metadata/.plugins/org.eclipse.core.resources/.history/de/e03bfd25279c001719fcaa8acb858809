#ifndef TERRAIN_H_
#define TERRAIN_H_

class Terrain {
public:
	Model* terrain[3][3];
	void update(){

	}
	Terrain(){

	}
	void draw(Shader shader){
		for(unsigned int i = 0; i < 3; i++){
			for(unsigned int j = 0; j < 3; i++){
				//Draw each cells
				model = glm::mat4();
				shader.setMat4("model", model);
				terrain[i][j]->Draw(shader);
			}
		}
	}
};




#endif /* TERRAIN_H_ */
